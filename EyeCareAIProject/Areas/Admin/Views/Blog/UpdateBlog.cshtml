@using EyeCareAIProject.Areas.Admin.Models
@model BlogAddViewModel
@{
    ViewData["Title"] = "Blog Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelle</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BlogId" />
    <input type="hidden" asp-for="ExistingImage" />

    <div class="form-group">
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kısa Açıklama</label>
        <input asp-for="LittleDesc" class="form-control" />
    </div>

    <div class="form-group">
        <label>Detaylı Açıklama</label>
        <textarea asp-for="BigDesc" class="form-control" rows="5"></textarea>
    </div>

    <div class="form-group">
        <label>Hakkında</label>
        <input asp-for="About" class="form-control" />
    </div>

    <div class="form-group">
        <label>Yazar</label>
        <input asp-for="Owner" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tıbbi Birim</label>
        <select asp-for="TreatmentId" class="form-control" asp-items="ViewBag.Treatments"></select>
    </div>

    <div class="form-group">
        <label>Mevcut Görsel</label><br />
        <img src="/BlogImages/@Model.ExistingImage" alt="Mevcut Görsel" width="150" />
    </div>

    <div class="form-group">
        <label>Yeni Görsel Yükle (İsteğe Bağlı)</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
    </div>

    <button class="btn btn-success">Güncelle</button>
</form>
