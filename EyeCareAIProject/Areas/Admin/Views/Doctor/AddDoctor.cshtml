@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using DTOLayer.DTOs.DoctorDTOs
@model DoctorAppUserDto
@{
    ViewData["Title"] = "AddDoctor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Doktor Ekleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        @Html.Label("TC Kimlik No")
        <input type="text" asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Ad")
        <input type="text" asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Soyad")
        <input type="text" asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Email")
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Şifre")
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Cinsiyet")
        <input type="text" asp-for="Gender" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Doğum Tarihi")
        <input type="date" asp-for="DateOfBirth" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Adres")
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Telefon")
        <input type="text" asp-for="ContactNumber" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Profil Resmi")
        <input type="file" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <br />

    <div class="form-group">
        @Html.Label("Uzmanlık")
        <input type="text" asp-for="Specialization" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Deneyim")
        <input type="text" asp-for="Experience" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Yetenek")
        <input type="text" asp-for="Skill" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Eğitim")
        <input type="text" asp-for="Education" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Instagram")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Twitter")
        <input type="text" asp-for="TwitterUrl" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Tıbbi Birim Seçin")
        <select asp-for="TreatmentId" class="form-control" asp-items="ViewBag.Treatments">
            <option value="">-- Seçiniz --</option>
        </select>
        <span asp-validation-for="TreatmentId" class="text-danger"></span>
    </div>
    <br />

    <button class="btn btn-outline-primary">Doktoru Ekle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


