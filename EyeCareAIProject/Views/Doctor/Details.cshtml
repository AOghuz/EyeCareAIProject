@model EntityLayer.Concrete.Doctor
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="team-details p_relative">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-5 col-md-12 col-sm-12 image-column">
                <figure class="image-box"><img src="/UserImages/@Model.AppUser.ImageUrl" alt=""></figure>
            </div>
            <div class="col-lg-7 col-md-12 col-sm-12 content-column">
                <div class="team-details-content">
                    <div class="team-info">
                        <h2>@Model.AppUser.FirstName @Model.AppUser.LastName</h2>
                        <span class="designation">@Model.Specialization</span>
                        <p>@Model.Description</p>
                        <ul class="list clearfix">

                            <li><span>Deneyim:</span>@Model.Skill</li>
                            <li><span>Eğitim:</span>@Model.Education</li>

                        </ul>
                        <ul class="social-link clearfix">
                            <li><a href="@Model.InstagramUrl"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="@Model.TwitterUrl"><i class="fab fa-twitter"></i></a></li>

                        </ul>
                    </div>
                    <div class="skills-box">
                        <div class="text">
                            <h3>Çalışma Alanları</h3>

                        </div>
                        <div class="progress-box">
                            <div class="progress-box p_relative d_block mb_25">
                                <h5>Empati</h5>
                                <div class="bar">
                                    <div class="bar-inner count-bar" data-percent="85%"></div>
                                    <div class="count-text">85%</div>
                                </div>
                            </div>
                            <div class="progress-box p_relative d_block mb_25">
                                <h5>Teknik</h5>
                                <div class="bar">
                                    <div class="bar-inner count-bar" data-percent="90%"></div>
                                    <div class="count-text">90%</div>
                                </div>
                            </div>
                            <div class="progress-box p_relative d_block">
                                <h5>Operasyon</h5>
                                <div class="bar">
                                    <div class="bar-inner count-bar" data-percent="75%"></div>
                                    <div class="count-text">75%</div>
                                </div>
                            </div>
                        </div>
                    </div>
